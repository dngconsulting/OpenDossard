{
  "git": {
    "commitMessage": "Release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "releaseNotes": "git log --no-merges --pretty=format:'* %s (%h)' ${latestTag}...HEAD"
  },
  "npm": {
    "publish": false,
    "skipChecks": true
  },
  "hooks": {
    "before:init": ["pnpm lint"]
  }
}
